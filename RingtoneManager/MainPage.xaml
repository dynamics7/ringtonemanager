        	<RowDefinition Height="*"/>
        	<RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--<MediaElement Margin="0" Grid.Row="1" Width="0" Height="0" AutoPlay="False" x:Name="MyMediaElement"/>-->
        <!--TitlePanel contains the name of the application and page title-->
        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel" Grid.Row="0" Margin="0" Background="{StaticResource PhoneChromeBrush}">
            <Grid Height="60">
            	<TextBlock x:Name="ApplicationTitle" Text="{Binding Title}" Style="{StaticResource PhoneTextNormalStyle}" FontSize="24" Margin="24,22,90,0" VerticalAlignment="Top"/>
            </Grid>
        </StackPanel>
        <StackPanel Background="{StaticResource PhoneChromeBrush}" Margin="0" Grid.Row="1" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" >
            <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="{Binding Resources.FilterBy, Source={StaticResource Localization}}" Margin="24,0,20,0" FontSize="21.333" Opacity="0.5" IsHitTestVisible="False"/>
        	<TextBox x:Name="filterBox" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="20,0" LostFocus="filterBox_LostFocus" Style="{StaticResource TextBoxStyle1}" InputScope="Default" KeyDown="filterBox_KeyDown" Opacity="0.5" IsHitTestVisible="False"/>
        </StackPanel>
        <StackPanel x:Name="stkMediaAttach" HorizontalAlignment="Right" Margin="0,24,24,0" Width="100" Tap="stkMediaAttach_Tap" RenderTransformOrigin="0.5,0.5" Opacity="0.5" Grid.RowSpan="2" VerticalAlignment="Top">
    		<StackPanel.Projection>
    			<PlaneProjection/>
    		</StackPanel.Projection>
    		<StackPanel.RenderTransform>
    			<CompositeTransform/>
    		</StackPanel.RenderTransform>
    		<i:Interaction.Triggers>
    			<i:EventTrigger EventName="MouseEnter">
    				<ec:GoToStateAction StateName="MediaAttach_MouseOver"/>
    			</i:EventTrigger>
    			<i:EventTrigger EventName="MouseLeave">
    				<ec:GoToStateAction StateName="MediaAttach_Normal"/>
    			</i:EventTrigger>
    		</i:Interaction.Triggers>
        	<Rectangle Fill="{StaticResource PhoneContrastBackgroundBrush}" HorizontalAlignment="Right" Margin="0,5,10,0" VerticalAlignment="Center" Width="52" Height="52">
        		<Rectangle.OpacityMask>
        			<ImageBrush x:Name="picMediaAttach" ImageSource="Images/mediaattach.png" Stretch="None" />
        		</Rectangle.OpacityMask>
        	</Rectangle>
            		
    	</StackPanel>
        <Grid x:Name="ContentPanel" Grid.Row="2" Margin="12,0,0,0">
            <toolkit:LongListSelector IsFlatList="True"  x:Name="lstArtists" Margin="12,0,0,0" ItemTemplate="{StaticResource ArtistItemStyle}" ItemsSource="{Binding Artists}"  Tap="lstArtists_Tap" HorizontalContentAlignment="Stretch" Background="{StaticResource PhoneBackgroundBrush}" >
            	<toolkit:LongListSelector.Projection>
            		<PlaneProjection/>
            	</toolkit:LongListSelector.Projection>
            </toolkit:LongListSelector>
        	<toolkit:LongListSelector IsFlatList="True" x:Name="lstAlbums" Margin="12,0,0,0" ItemTemplate="{StaticResource AlbumItemStyle}" Tap="lstAlbums_Tap" ItemsSource="{Binding Albums}" HorizontalContentAlignment="Stretch" Opacity="0" Background="{StaticResource PhoneBackgroundBrush}" >
        		<toolkit:LongListSelector.Projection>
        			<PlaneProjection/>
        		</toolkit:LongListSelector.Projection>
        	</toolkit:LongListSelector>
            <toolkit:LongListSelector IsFlatList="True" x:Name="lstSongs" Margin="12,0,0,0" ItemTemplate="{StaticResource SongItemStyle}" Tap="lstSongs_Tap" ItemsSource="{Binding Songs}" HorizontalContentAlignment="Stretch" Opacity="0" Background="{StaticResource PhoneBackgroundBrush}" >
            	<toolkit:LongListSelector.Projection>
            		<PlaneProjection/>
            	</toolkit:LongListSelector.Projection>
            </toolkit:LongListSelector>
		</Grid>
    </Grid>
</phone:PhoneApplicationPage>